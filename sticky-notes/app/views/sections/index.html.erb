<p id="notice"><%= notice %></p>

<h1>Sections</h1>


<style>
  #stickyNote {
    background-color: #a366ff ;
    padding: 10px ;
    margin: 10px;
    width: 200px;
  }
</style>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

    <% @sections.each do |section| %>
      <div id = "stickyNote">
        <div><%= link_to 'Show', section %></div>
        <div><%= link_to 'Edit', edit_section_path(section) %></div>
        <div><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
    <% end %>
</table>

<br>

<%= link_to 'New Section', new_section_path %>
